<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="sampleTheme" parent="android:Theme.Material.Light.DarkActionBar">
        <item name="android:colorPrimary">#546E7A</item>
        <item name="android:colorPrimaryDark">#455A64</item>
        <item name="android:colorAccent">#FFC107</item>
    </style>

    <style name="indexLink" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:padding">0dp</item>
    </style>

    <style name="fill">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="mainPanel">
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_above">@+id/footer</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="footer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:background">#546E7A</item>
        <item name="android:elevation">5dp</item>
    </style>

    <style name="footerNote">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:padding">10dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="footerButton" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:paddingTop">18dp</item>
        <item name="android:paddingBottom">18dp</item>
    </style>

    <style name="previousButton" parent="@style/footerButton">
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:src">@drawable/previous</item>
    </style>

    <style name="nextButton" parent="@style/footerButton">
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:src">@drawable/next</item>
    </style>

</resources>
